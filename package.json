{
  "name": "popcorn-api",
  "version": "4.0.0",
  "description": "Popcorn Time API is developed to make it easier for anyone to create their own version of Popcorn Time.",
  "dependencies": {
    "bytes": "^3.0.0",
    "dotenv": "^4.0.0",
    "eztv-api-pt": "^1.3.1",
    "fanart.tv-api": "^2.0.1",
    "horriblesubs-api": "^1.0.8",
    "inquirer": "^4.0.0",
    "kat-api-pt": "^3.0.0",
    "mongoose": "^4.13.4",
    "node-tvdb": "^3.2.0",
    "nyaa-api-pt": "^2.0.0",
    "omdb-api-pt": "^2.0.1",
    "p-map": "^1.2.0",
    "p-times": "^1.0.1",
    "parse-torrent": "^5.8.3",
    "pop-api": "git+https://github.com/chrisalderson/pop-api.git#development",
    "pop-api-scraper": "git+https://github.com/chrisalderson/pop-api-scraper.git#development",
    "tmdbapi": "^1.0.2",
    "trakt.tv": "^6.0.2",
    "webtorrent-health": "^1.1.1",
    "yts-api-pt": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-strict-mode": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "del": "^3.0.0",
    "dredd": "^4.7.0",
    "esdoc": "^1.0.4",
    "esdoc-ecmascript-proposal-plugin": "1.0.0",
    "esdoc-flow-type-plugin": "1.0.1",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.11.0",
    "eslint-config-vixo": "^2.0.1",
    "express": "^4.16.2",
    "flow": "^0.2.3",
    "flow-bin": "^0.59.0",
    "flow-typed": "^2.2.3",
    "forever": "^0.15.3",
    "husky": "^0.14.3",
    "mkdirp": "^0.5.1",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "sinon": "^4.1.2"
  },
  "license": "MIT",
  "scripts": {
    "build": "./node_modules/.bin/babel src --out-dir build",
    "coveralls": "cat ./coverage/lcov.info | node ./node_modules/.bin/coveralls",
    "debug": "cross-evn NODE_ENV=development DEBUG=popcorn-api:* node --require babel-register --inspect-brk=http://localhost:9229 ./src/index.js -m pretty",
    "dev": "cross-env NODE_ENV=development ./node_modules/.bin/babel-node ./src/index.js -m pretty",
    "docs": "./node_modules/.bin/esdoc -c .esdoc.json",
    "flow": "./node_modules/.bin/flow",
    "forever": "cross-env NODE_ENV=production ./node_modules/.bin/forever start ./build/index.js -m pretty",
    "lint": "./node_modules/.bin/eslint {src,test}/** ./*.js",
    "precommit": "npm run lint && npm run flow",
    "prepush": "npm run test",
    "pretest": "npm run build",
    "providers": "./node_modules/.bin/babel-node ./src/index.js --providers",
    "start": "cross-env NODE_ENV=production node ./build/index.js -m pretty",
    "test": "npm run test-dredd && npm run test-mocha",
    "test-dredd": "cross-env NODE_ENV=test ./node_modules/.bin/babel-node ./node_modules/dredd/bin/dredd",
    "test-mocha": "cross-env NODE_ENV=test ./node_modules/.bin/nyc --reporter=lcov --reporter=text ./node_modules/.bin/mocha --recursive --exit --timeout 10000 --reporter spec test/**"
  },
  "bin": {
    "popcorn-api": "./build/index.js"
  },
  "engines": {
    "node": ">=7.10.1"
  },
  "main": "./build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/popcorn-official/popcorn-api.git"
  },
  "eslintConfig": {
    "extends": "vixo",
    "globals": {
      "logger": true
    }
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "include": [
      "src"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
